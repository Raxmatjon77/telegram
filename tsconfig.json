{
  "compilerOptions": {
    "outDir": "dist/",
    "baseUrl": "src/",
    "target": "ESNext",
    "module": "CommonJS",
    "paths": {
      "#*": ["./*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["dist/", "prisma/", "node_modules/"]
}
